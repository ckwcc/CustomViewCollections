<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RulerView">
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="lineSpaceWidth" format="dimension" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineMaxHeight" format="dimension" />
        <attr name="lineMidHeight" format="dimension" />
        <attr name="lineMinHeight" format="dimension" />
        <attr name="textMarginTop" format="dimension" />
        <attr name="alphaEnable" format="boolean" />
        <attr name="minValue" format="float"/>
        <attr name="maxValue" format="float"/>
        <attr name="selectorValue" format="float"/>
        <attr name="perValue" format="float"/>
    </declare-styleable>

    <declare-styleable name="CircleLevelView">
        <attr name="externalRadius" format="dimension"/>
        <attr name="externalColor" format="color"/>
        <attr name="innerRadius" format="dimension"/>
        <attr name="innerColor" format="color"/>
        <attr name="percentColor" format="color"/>
        <attr name="startAngle" format="float"/>
        <attr name="endAngle" format="float"/>
        <attr name="centerTextColor" format="color"/>
        <attr name="centerTextSize" format="dimension"/>
        <attr name="isPercent" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CircleVerticalView">
        <attr name="circleVerticalViewRadius" format="dimension"/>
        <attr name="circleVerticalViewBgColor" format="color"/>
        <attr name="verticalPercent" format="float"/>
        <attr name="waveColor" format="color"/>
        <attr name="waveWidth" format="dimension"/>
        <attr name="waveHeight" format="dimension"/>
        <attr name="circleVerticalTextSize" format="dimension"/>
        <attr name="circleVerticalTextColor" format="color"/>
        <attr name="verticalDuration" format="integer"/>
        <attr name="horizontalDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TagView">
        <attr name="tagViewBgColor" format="color"/>
        <attr name="tagViewTextSize" format="dimension"/>
        <attr name="tagViewTextColor" format="color"/>
        <attr name="tagViewText" format="string"/>
        <attr name="tagViewCorner" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="StarViewLayout">
        <attr name="starMargin" format="dimension"/>
        <attr name="starNumber" format="integer"/>
        <attr name="defaultStar" format="reference"/>
        <attr name="lightStar" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PlayPauseView">
        <attr name="barWidth" format="dimension"/>
        <attr name="barHeight" format="dimension"/>
        <attr name="barPadding" format="dimension"/>
        <attr name="barColor" format="color"/>
        <attr name="barBgColor" format="color"/>
        <attr name="barClockWise" format="boolean"/>
        <attr name="barPlayingState" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CirclePointView">
        <attr name="circlePointDefColor" format="color"/>
        <attr name="circlePointAchieveColor" format="color"/>
        <attr name="circlePointTextColor" format="color"/>
        <attr name="circlePointTextSize" format="dimension"/>
        <attr name="circlePointAchievePercent" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RadarView">
        <attr name="radarBorderWidth" format="dimension"/>
        <attr name="radarAnimDuration" format="integer"/>
        <attr name="radarBorderColor" format="color"/>
        <attr name="radarOuterTextColor" format="color"/>
        <attr name="radarOuterTextSize" format="dimension"/>
        <attr name="radarInnerTextColor" format="color"/>
        <attr name="radarInnerTextSize" format="dimension"/>
        <attr name="radarShowInnerText" format="boolean"/>
        <attr name="radarProgressColor" format="color"/>
        <attr name="radarProgressAlpha" format="integer"/>
        <attr name="radarBackgroundColor" format="color"/>
        <attr name="radarBackgroundAlpha" format="integer"/>
        <attr name="radarOuterTextMargin" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SimplePieChartView">
        <attr name="pieChartRadius" format="dimension"/>
        <attr name="pieChartShowText" format="boolean"/>
    </declare-styleable>

</resources>